generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  schemas  = ["diner"]
}

model foods {
  id_food     String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name        String    @db.VarChar(30)
  description String?
  price       Decimal   @db.Decimal(6, 2)
  promotion   Decimal?  @db.Decimal(7, 2)
  stock       Boolean?  @default(true)
  sale        Boolean?  @default(true)
  created_at  DateTime? @default(now()) @db.Timestamp(6)

  @@schema("diner")
}

model settings {
  id_setting   String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name         String
  value_string String?
  value_number Decimal?  @db.Decimal
  created_at   DateTime? @default(now()) @db.Timestamp(6)

  @@schema("diner")
}

model settings_colors {
  id_settings_colors String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name               String @unique @db.VarChar(30)
  value              String @db.VarChar(50)
  value_default      String @db.VarChar(50)

  @@schema("diner")
}
